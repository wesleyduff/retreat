    <%= f.label :gender %><br>
    <%= f.select :gender, @cabinTypes %>
  </div>
  <div class="field input_group">
    <%= f.check_box :available %>  <%= f.label :available %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :max %><br>
    <%= f.number_field :max %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
