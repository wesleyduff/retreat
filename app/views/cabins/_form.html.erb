<%= form_for(@cabin) do |f| %>
  <% if @cabin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cabin.errors.count, "error") %> prohibited this cabin from being saved:</h2>

      <ul>
      <% @cabin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field input-group input-group-lg">
    <span class="input-group-addon">@</span>
    <%= f.text_field :name, class: "form-control" %>
  </div>
